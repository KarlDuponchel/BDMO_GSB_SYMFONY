{% extends 'base.html.twig' %}

{% block title %}Liste des médicaments{% endblock %}

{% block body %}
<style>
{% include 'css/index.css' %}
</style>
  <div class="TitreContenu">
    <p class="Titre">Liste des médicaments</p>
  </div>
    {% for medicament in medicaments %}
    <br>
    <br>
    <div class="Medicament">
        <button class="BtnMedoc">
            <div class="MedicamentGauche"><br>
            {{ medicament.medNomcommercial }}
            </div>
            <div class="MedicamentDroit">
                <br/>
                <!--<u><b>Dépot légal</b></u> :--> {{ medicament.medDepotlegal }} / <!--<u><b>Composition</b></u> : -->{{ medicament.medComposition }} /<!-- <u><b>Quantité</b></u> :--> {{ medicament.medQuantite }}
            </div>
        </button>
    </div>

    {% endfor %}
{% endblock %}
